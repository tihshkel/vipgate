# ============================================
# Frontend and Backend URLs
# ============================================
# URL для связи между фронтендом и бэкендом через API

# Для разработки (localhost)
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# Для продакшена (сервер) - раскомментируйте и укажите реальные адреса
# FRONTEND_URL=https://your-frontend-domain.com
# BACKEND_URL=https://api.your-backend-domain.com
# или IP адреса:
# FRONTEND_URL=http://192.168.1.100:5173
# BACKEND_URL=http://192.168.1.100:8000

# ============================================
# Django Settings
# ============================================
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# CENTRAL DATABASE (Global Database)
# ============================================
# Центральная БД для общих каталогов и метаданных
USE_POSTGRESQL=False

# Для разработки (SQLite3) - используется по умолчанию
# Для продакшена (PostgreSQL) - установите USE_POSTGRESQL=True

GLOBAL_DB_ENGINE=django.db.backends.postgresql
GLOBAL_DB_NAME=vipgate_global
GLOBAL_DB_USER=vipgate_user
GLOBAL_DB_PASSWORD=your_password
GLOBAL_DB_HOST=localhost
GLOBAL_DB_PORT=5432

# ============================================
# REGIONAL DATABASES
# ============================================
# Региональные БД для персональных данных пользователей

# Общие настройки для всех региональных БД
REGIONAL_DB_ENGINE=django.db.backends.postgresql
REGIONAL_DB_USER=vipgate_user
REGIONAL_DB_PASSWORD=your_password
REGIONAL_DB_PORT=5432

# США и Канада
US_CANADA_DB_NAME=vipgate_us_canada
US_CANADA_DB_HOST=localhost

# Европа
EUROPE_DB_NAME=vipgate_europe
EUROPE_DB_HOST=localhost

# Азия и Австралия
ASIA_DB_NAME=vipgate_asia
ASIA_DB_HOST=localhost

# Южная Америка
SOUTH_AMERICA_DB_NAME=vipgate_south_america
SOUTH_AMERICA_DB_HOST=localhost

# Ближний Восток
MIDDLE_EAST_DB_NAME=vipgate_middle_east
MIDDLE_EAST_DB_HOST=localhost

# ============================================
# Redis (для кеша и Celery)
# ============================================
REDIS_URL=redis://127.0.0.1:6379/1
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# Email Settings
# ============================================
# Для разработки используйте console backend (вывод в консоль)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Для продакшена используйте SendGrid
# SendGrid API Key
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Email отправителя
SENDGRID_FROM_EMAIL=noreply@vipgate.com

# Имя отправителя
SENDGRID_FROM_NAME=VIPGate Team

# Для альтернативного варианта через SMTP (Gmail и т.д.)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@vipgate.com

# ============================================
# Google Cloud Storage (для медиа-файлов)
# ============================================
# Для разработки: USE_GCS=False (используется локальное хранилище)
USE_GCS=False

# Для продакшена: USE_GCS=True
# USE_GCS=True
# GS_BUCKET_NAME=vipgate-media
# GS_PROJECT_ID=your-project-id
# GS_CREDENTIALS=/path/to/credentials.json
# CDN_MEDIA_URL=https://cdn.vipgate.com/media/

# ============================================
# GeoIP2 (для определения региона по IP)
# ============================================
# Скачайте GeoIP2 базу данных и укажите путь
# GEOIP2_DB_PATH=/path/to/GeoLite2-Country.mmdb

# ============================================
# CORS
# ============================================
# CORS_ALLOWED_ORIGINS автоматически включает FRONTEND_URL
# Можно указать дополнительные адреса через запятую
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173










